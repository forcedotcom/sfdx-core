{
  "extends": "@salesforce/dev-config/tsconfig-test-strict",
  "include": ["nut/**/*.ts", "unit/**/*.ts", "perf/**/*.ts"],
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2022"
  }
}
