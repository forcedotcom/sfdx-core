{
  "test": {
    "testsPath": "test/**/*Test.ts"
  },
  "wireit": {
    "compile": {
      "command": "tspc -p . --pretty --incremental",
      "files": ["src/**/*.ts", "tsconfig.json", "messages", "messageTransformer"],
      "output": ["lib/**", "*.tsbuildinfo"],
      "clean": "if-file-deleted"
    }
  },
  "exclude-scripts": ["prepack"]
}
